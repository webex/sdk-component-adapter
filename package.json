{
  "name": "@webex/sdk-component-adapter",
  "version": "1.77.0",
  "main": "dist/webexSDKComponentAdapter.esm.js",
  "module": "dist/webexSDKComponentAdapter.esm.js",
  "scripts": {
    "build": "rollup -c",
    "linter": "eslint src/",
    "release": "semantic-release",
    "release:debug": "semantic-release --debug",
    "release:dry-run": "semantic-release --dry-run",
    "start": "nodemon -r dotenv/config scripts/start.js",
    "serve": "parcel scripts/index.html",
    "test": "jest",
    "test:integration": "jest \"^(?=.*integration.test.js).*\"",
    "test:unit": "jest \"^(?=.*.test.js)(?!.*integration).*\"",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/webex/sdk-component-adapter.git"
  },
  "publishConfig": {
    "tag": "latest",
    "access": "public"
  },
  "author": "devsupport@webex.com",
  "license": "MIT",
  "peerDependencies": {
    "rxjs": "^6.5.4",
    "webex": "^1.142.0"
  },
  "dependencies": {
    "@webex/common": "^1.105.0",
    "@webex/component-adapter-interfaces": "^1.17.0",
    "logform": "^2.2.0",
    "winston": "^3.3.3",
    "winston-transport": "^4.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/node": "^7.12.6",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/git": "^10.0.0",
    "@webex/test-users": "^1.80.36",
    "dotenv": "^8.2.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsdoc": "^30.7.8",
    "husky": "^4.3.0",
    "jest": "^24.9.0",
    "jest-junit": "^8.0.0",
    "jest-puppeteer": "^4.3.0",
    "nodemon": "^2.0.6",
    "parcel": "^1.12.4",
    "parcel-bundler": "^1.12.3",
    "puppeteer": "^2.0.0",
    "rollup": "^1.21.4",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "semantic-release": "^18.0.0"
  },
  "browserslist": [
    "last 2 versions and not dead and > 2%"
  ],
  "babel": {
    "plugins": [
      "@babel/plugin-transform-runtime"
    ],
    "presets": [
      "@babel/preset-env"
    ]
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "preset": "jest-puppeteer",
    "reporters": [
      "default",
      "jest-junit"
    ]
  },
  "jest-junit": {
    "outputDirectory": "test_results/jest",
    "outputName": "results.xml"
  },
  "nodemonConfig": {
    "execMap": {
      "js": "babel-node"
    },
    "ext": "js,json",
    "watch": [
      ".env",
      "scripts/**/*"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "scope-case": [
        2,
        "always",
        [
          "lower-case",
          "pascal-case"
        ]
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run linter",
      "pre-push": "npm run build && npm run test:unit",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json",
            "package-lock.json"
          ]
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/webexSDKComponentAdapter.esm.js",
              "label": "ECMAScript (ESM) bundle"
            }
          ]
        }
      ]
    ]
  }
}
